@model Person
@{
    ViewData["Title"] = "Kişi Ekle";
}
<div class="row">
    <div class="col-md-6">
        <h2 class="my-4">Kişi Ekle</h2>
    </div>
    <div class="col-md-6 text-right d-flex justify-content-end align-items-center">
    </div>
</div>


<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Name" class="mb-2">Ad</label>
                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Ad Giriniz">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Surname" class="my-2">Soyad</label>
                <input type="text" class="form-control" asp-for="@Model.Surname" placeholder="Soyad Giriniz">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Company" class="my-2">Şirket</label>
                <input type="text" class="form-control" asp-for="@Model.Company" placeholder="Şirket Giriniz">
            </div>

            <h4 class="mt-4">İletişim Bilgisi</h4>

            <div style="border-radius:10px;">
                <div class="form-group">
                    <label asp-for="@Model.ContactInfo[0].PhoneNumber" class="mb-1">Telefon</label>
                    <input type="text" class="form-control" asp-for="@Model.ContactInfo[0].PhoneNumber" placeholder="Telefon Giriniz">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactInfo[0].Email" class="my-1">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.ContactInfo[0].Email" placeholder="Email Giriniz">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactInfo[0].Location" class="my-1">Konum</label>
                    <select class="form-select" asp-for="@Model.ContactInfo[0].Location" aria-label="Default select example">
                        <option selected>Seçiniz</option>
                        <option value="İstanbul">İstanbul</option>
                        <option value="Ankara">Ankara</option>
                        <option value="İzmir">İzmir</option>
                        <option value="Eskişehir">Eskişehir</option>
                    </select>
                </div>
            </div>

            <a class="btn btn-primary"> İletişim Bilgisi Ekle</a>
            <button type="submit" class="btn btn-primary my-4">Gönder</button>

        </div>

    </div>
</form>