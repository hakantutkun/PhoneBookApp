@model List<Report>
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="my-4">Raporlar</h2>
    </div>
    <div class="col-md-6 text-right d-flex justify-content-end align-items-center">
        <a asp-action="Create" class="btn btn-primary ">Rapor Oluştur</a>
    </div>
</div>

@if(Model == null)
{
    <div class="alert alert-dark" role="alert">
      Kayıtlı rapor bulunamadı.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tarih</th>
            <th scope="col">Rapor Durumu</th>
            <th scope="col">Seçilen Konum</th>
            <th scope="col" width="20%">İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var report in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@report.CreationTime</td>
                <td>@report.ReportState</td>
                <td>@report.Location</td>
                <td class="d-flex justify-content-end align-items-center">
                    <a asp-controller="Report" asp-action="Detail" asp-route-id="@report.Id"  class="btn btn-primary mx-2">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-danger">Kaldır</a>
                </td>
            </tr>
        }

    </tbody>
</table>
}